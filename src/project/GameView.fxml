<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="project.GameController">
    <ImageView fx:id="backgroundImage" fitWidth="800" fitHeight="600" />
    <Label fx:id="userHealthLabel" layoutX="50" layoutY="10" text="Health: 100" />
    <Label fx:id="aiHealthLabel" layoutX="650" layoutY="10" text="Health: 100" />
    <ImageView fx:id="userCharacterImage" layoutX="50" layoutY="300" fitWidth="150" fitHeight="150" />
    <ImageView fx:id="aiCharacterImage" layoutX="600" layoutY="300" fitWidth="150" fitHeight="150" />
    <Button fx:id="attackButton" layoutX="350" layoutY="500" text="Attack" onAction="#handleAttackAction" />
    <TextArea fx:id="gameLog" layoutX="50" layoutY="100" prefWidth="700" prefHeight="150" />
</AnchorPane>
